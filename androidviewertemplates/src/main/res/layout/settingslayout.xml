<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_gray">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/highlightTeamAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Highlight Team Amount"
                android:paddingTop="10dp"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:paddingBottom="2dp"/>


            <EditText
                android:id="@+id/highlightTeamAmountEditText"
                android:layout_width="wrap_content"
                android:text="0"
                android:backgroundTint="@color/dark_gray"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                />


        </RelativeLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:id="@+id/separatorOne"
            android:layout_alignParentBottom="true"/>

        <FrameLayout
            android:id="@+id/teamAmountFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_above="@+id/separatorOne"
            android:layout_alignParentStart="true"
            android:background="@color/white">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button style="@style/AppTheme.Button"
                    android:id="@+id/saveButton"
                    android:layout_width="match_parent"
                    android:text="save"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </FrameLayout>
    </RelativeLayout>



</LinearLayout>