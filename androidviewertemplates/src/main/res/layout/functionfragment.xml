<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button style="@style/AppTheme.Button"
    android:id="@+id/teamsOfPicklist"
    android:layout_height="80dp"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:text="Teams of picklist"
    android:layout_marginRight="10dp"/>

    <Button style="@style/AppTheme.Button"
        android:id="@+id/clearStarredTeams"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="clear starred teams"
        android:layout_marginRight="10dp"/>

    <Button style="@style/AppTheme.Button"
        android:id="@+id/clearHighlightedTeams"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Clear highlighted teams"
        android:layout_marginRight="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Last updated: 5/9/18"/>
    </RelativeLayout>


</LinearLayout>